<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
         Customize your theme here.
    </style>

    <!-- Light Mode -->
    <!-- Screen background of Light Mode is on -->
    <style name="SCREEN">
        <item name="android:background">#000</item>
    </style>

    <!-- Texts of Light Mode is on -->
    <style name="TEXT">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- StartUp Remark Text of Light Mode is on -->
    <style name="STARTUP_TEXT">
        <item name="android:textColor">#716E6E</item>
    </style>

</resources>